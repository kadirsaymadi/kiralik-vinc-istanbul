section.hero-section.py-0.bg-gradient-primary.text-white.position-relative.overflow-hidden
  .hero-background
    .hero-shape.hero-shape-1
    .hero-shape.hero-shape-2
    .hero-shape.hero-shape-3
  
  .container.position-relative.py-5
    .row.align-items-center.min-vh-75
      .col-lg-6(data-aos="fade-right")
        h1.display-4.fw-bold.mb-4
          | #{siteConfig.texts.heroTitle}
        p.lead.mb-4
          | #{siteConfig.texts.heroDescription}
        
        .hero-features.mb-4
          .row.g-3
            .col-md-6
              .feature-item.d-flex.align-items-center
                .feature-icon.bg-white.text-success.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                  | ✓
                span #{siteConfig.texts.feature1}
            .col-md-6
              .feature-item.d-flex.align-items-center
                .feature-icon.bg-white.text-success.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                  | ✓
                span #{siteConfig.texts.feature2}
            .col-md-6
              .feature-item.d-flex.align-items-center
                .feature-icon.bg-white.text-success.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                  | ✓
                span #{siteConfig.texts.feature3}
            .col-md-6
              .feature-item.d-flex.align-items-center
                .feature-icon.bg-white.text-success.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                  | ✓
                span #{siteConfig.texts.feature4}
        
        .hero-actions
          a.btn.btn-warning.btn-lg.me-3.mb-2(href="/iletisim") 
            i.fas.fa-calculator.me-2
            | #{siteConfig.texts.heroButton1}
          a.btn.btn-outline-light.btn-lg.mb-2(href="/kiralik-vincler") 
            i.fas.fa-truck.me-2
            | #{siteConfig.texts.heroButton2}
      
      .col-lg-6(data-aos="fade-left")
        .hero-image.text-center
          .crane-animation
            img.img-fluid.rounded.shadow-lg(src="/images/hero-crane-new.webp", alt="İstanbul Vinç Kiralama", loading="lazy")
  
  .hero-stats.bg-white.bg-opacity-10.py-4
    .container
      .row.text-center
        .col-md-3.col-6.mb-3
          .stat-item
            .stat-number.display-6.fw-bold.text-white #{siteConfig.stats[0].number}
            .stat-label #{siteConfig.stats[0].label}
        .col-md-3.col-6.mb-3
          .stat-item
            .stat-number.display-6.fw-bold.text-white #{siteConfig.stats[1].number}
            .stat-label #{siteConfig.stats[1].label}
        .col-md-3.col-6.mb-3
          .stat-item
            .stat-number.display-6.fw-bold.text-white #{siteConfig.stats[2].number}
            .stat-label #{siteConfig.stats[2].label}
        .col-md-3.col-6.mb-3
          .stat-item
            .stat-number.display-6.fw-bold.text-white #{siteConfig.stats[3].number}
            .stat-label #{siteConfig.stats[3].label}
