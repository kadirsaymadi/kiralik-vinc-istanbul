mixin craneCard(crane)
  .col-lg-4.col-md-6.mb-4
    .card.h-100.shadow-sm.border-0.hover-card
      .position-relative
        img.card-img-top(src=crane.images, alt=crane.name, loading="lazy")
        .badge.bg-warning.position-absolute.top-0.end-0.m-2
          i.fas.fa-check.me-1
          | Mevcut
      
      .card-body.d-flex.flex-column
        h5.card-title.text-warning= crane.name
        .crane-specs.mb-3
          .row.g-2
            .col-6
              .spec-item
                i.fas.fa-weight-hanging.text-warning.me-1
                span.small= crane.capacity
            .col-6
              .spec-item
                i.fas.fa-arrow-up.text-warning.me-1
                span.small= crane.height
            .col-6
              .spec-item
                i.fas.fa-expand-arrows-alt.text-warning.me-1
                span.small= crane.radius
            .col-6
              .spec-item
                i.fas.fa-cog.text-warning.me-1
                span.small= crane.type
        
        p.card-text.text-muted.small.flex-grow-1= crane.description
        
        .features.mb-3
          h6.text-warning.mb-2 Ã–zellikler:
          ul.list-unstyled.small
            each feature in crane.features.slice(0, 3)
              li
                i.fas.fa-check.text-warning.me-1
                = feature
        
        .card-actions.mt-auto
          a.btn.btn-outline-warning.btn-sm.me-2(href=`/vinc/${crane.id}`) Detay
          a.btn.btn-warning.btn-sm(href="/teklif-al") Teklif Al
