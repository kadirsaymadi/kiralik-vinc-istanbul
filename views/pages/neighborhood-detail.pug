extends ../layouts/main

block content
  section.py-5.bg-light
    .container
      .row.align-items-center.mb-5
        .col-lg-8
          h1.display-5.fw-bold.text-dark.mb-3= neighborhood
          p.lead.text-muted.mb-4 #{district.name} ilçesinde #{neighborhood} mahallesinde profesyonel vinç kiralama hizmeti
          
          .neighborhood-features.row.g-3.mb-4
            .col-md-6
              .feature-item.d-flex.align-items-center
                .feature-icon.bg-gradient-orange.text-white.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                  i.fas.fa-map-marker-alt
                span= `${district.name} - ${neighborhood}`
            .col-md-6
              .feature-item.d-flex.align-items-center
                .feature-icon.bg-gradient-orange.text-white.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                  i.fas.fa-truck
                span #{siteConfig.texts.feature4}
            .col-md-6
              .feature-item.d-flex.align-items-center
                .feature-icon.bg-gradient-orange.text-white.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                  i.fas.fa-clock
                span #{siteConfig.texts.feature1}
            .col-md-6
              .feature-item.d-flex.align-items-center
                .feature-icon.bg-gradient-orange.text-white.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                  i.fas.fa-user-tie
                span #{siteConfig.texts.feature3}
        
        .col-lg-4.text-center
          .contact-card.bg-white.p-4.rounded.shadow
            h4.text-warning.mb-3 #{siteConfig.texts.callNow}
            a.btn.btn-warning.btn-lg.w-100.mb-3(href=siteConfig.contact.phoneLink)
              i.fas.fa-phone.me-2
              | #{siteConfig.contact.phoneDisplay}
            p.small.text-muted.mb-0 #{siteConfig.texts.feature1}

  section.py-5
    .container
      .text-center.mb-5
        h2.display-6.fw-bold.text-dark.mb-3
          | #{neighborhood} Mahallesinde 
          span.text-warning #{siteConfig.texts.availableCranes}
        p.lead.text-muted #{siteConfig.texts.otherCranes}
      
      .row.g-4
        each crane in availableCranes.slice(0, 6)
          .col-lg-4.col-md-6
            .card.h-100.shadow-sm
              .card-body.d-flex.flex-column
                .text-center.mb-3
                  .crane-icon.bg-gradient-orange.text-white.rounded-circle.mx-auto.d-flex.align-items-center.justify-content-center.mb-3(style="width: 60px; height: 60px;")
                    i.fas.fa-truck.fa-2x
                  h5.card-title.text-dark= crane.name
                  p.card-text.text-muted.small= crane.description
                
                .crane-specs.mb-3
                  .row.g-2
                    .col-6
                      .spec-item.text-center.p-2.bg-light.rounded
                        .spec-label.small.text-muted #{siteConfig.texts.liftingCapacity}
                        .spec-value.fw-bold.text-warning= crane.capacity
                    .col-6
                      .spec-item.text-center.p-2.bg-light.rounded
                        .spec-label.small.text-muted #{siteConfig.texts.type}
                        .spec-value.fw-bold.text-warning= crane.type
                
                .mt-auto
                  a.btn.btn-warning.w-100(href=`/vinc/${crane.slug}`) Detayları Gör
      
      .text-center.mt-4
        a.btn.btn-outline-warning.btn-lg(href="/kiralik-vincler") #{siteConfig.texts.seeAllCranes}

  section.py-5.bg-light
    .container
      .text-center.mb-5
        h2.display-6.fw-bold.text-dark.mb-3
          | #{neighborhood} Mahallesinde 
          span.text-warning #{siteConfig.texts.serviceAreas}
        p.lead.text-muted #{siteConfig.texts.allDistrictsServiceDesc}
      
      .row.g-4
        .col-lg-3.col-md-6
          .service-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .service-icon.mb-3
              i.fas.fa-building.text-warning.fa-3x
            h5.card-title #{siteConfig.texts.constructionProjects}
            p.card-text.text-muted #{siteConfig.texts.constructionProjectsDesc}
        .col-lg-3.col-md-6
          .service-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .service-icon.mb-3
              i.fas.fa-home.text-warning.fa-3x
            h5.card-title #{siteConfig.texts.housingProjects}
            p.card-text.text-muted #{siteConfig.texts.housingProjectsDesc}
        .col-lg-3.col-md-6
          .service-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .service-icon.mb-3
              i.fas.fa-industry.text-warning.fa-3x
            h5.card-title #{siteConfig.texts.industrialProjects}
            p.card-text.text-muted #{siteConfig.texts.industrialProjectsDesc}
        .col-lg-3.col-md-6
          .service-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .service-icon.mb-3
              i.fas.fa-tools.text-warning.fa-3x
            h5.card-title #{siteConfig.texts.commercialProjects}
            p.card-text.text-muted #{siteConfig.texts.commercialProjectsDesc}

  section.py-5.bg-gradient-orange.text-white
    .container.text-center
      h2.display-6.fw-bold.mb-4 #{siteConfig.texts.contactTitle}
      p.lead.mb-4 #{siteConfig.texts.contactSubtitle}
      .row.justify-content-center
        .col-lg-6
          .contact-info.bg-white.p-4.rounded.shadow
            .contact-item.d-flex.align-items-center.justify-content-center.mb-3
              i.fas.fa-phone.text-warning.fa-2x.me-3
              span.display-6.fw-bold.text-dark #{siteConfig.contact.phoneDisplay}
