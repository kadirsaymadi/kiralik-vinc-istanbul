extends ../layouts/main

block content
  section.py-5.bg-light
    .container
      .text-center.mb-5
        h1.display-4.fw-bold.text-dark.mb-3
          | İstanbul 
          span.text-warning #{siteConfig.texts.allDistrictsTitle}
        p.lead.text-muted #{siteConfig.texts.allDistrictsDesc}
      
      .row.g-4
        each district in districts
          .col-lg-4.col-md-6
            .district-card.bg-white.p-4.rounded.shadow.h-100
              .district-header.mb-3
                .district-icon.mb-3
                  i.fas.fa-map-marker-alt.text-warning.fa-3x
                h4.card-title.text-dark= district.name
                p.card-text.text-muted= district.description
              
              .district-neighborhoods.mb-4
                h6.text-warning.mb-3 #{siteConfig.texts.neighborhoods} (#{district.neighborhoods.length}):
                .neighborhoods-list
                  each neighborhood in district.neighborhoods.slice(0, 6)
                    - const turkishChars = {'ç': 'c', 'Ç': 'C', 'ğ': 'g', 'Ğ': 'G', 'ı': 'i', 'I': 'I', 'ö': 'o', 'Ö': 'O', 'ş': 's', 'Ş': 'S', 'ü': 'u', 'Ü': 'U'}
                    - const convertedName = neighborhood.replace(/[çÇğĞıIöÖşŞüÜ]/g, (char) => turkishChars[char] || char)
                    - const neighborhoodSlug = convertedName.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9-]/g, '').replace('-mahallesi', '')
                    a.badge.bg-light.text-dark.me-1.mb-1.text-decoration-none(href=`/kiralik-vinc-${district.slug}/${neighborhoodSlug}`)= neighborhood
                  if district.neighborhoods.length > 6
                    span.badge.bg-secondary +#{district.neighborhoods.length - 6}
              
              .district-actions
                .btn-group.w-100.mb-2(role="group")
                  a.btn.btn-warning.btn-sm(href=`/kiralik-vinc-${district.slug}`) #{siteConfig.texts.seeAllCranes}
                  a.btn.btn-warning.btn-sm(href=`/kiralik-sepetli-platform-${district.slug}`) #{siteConfig.texts.seePlatforms}
                  a.btn.btn-warning.btn-sm(href=`/kiralik-forklift-${district.slug}`) #{siteConfig.texts.seeForklifts}
                a.btn.btn-outline-warning.btn-sm.w-100(href="/iletisim") #{siteConfig.texts.getQuote}
  
  section.py-5.bg-gradient-orange.text-white
    .container.text-center
      h2.display-6.fw-bold.mb-4 #{siteConfig.texts.allDistrictsService}
      p.lead.mb-4 #{siteConfig.texts.allDistrictsServiceDesc}
      .row.justify-content-center
        .col-lg-8
          .stats-row.row.g-4
            .col-md-3
              .stat-card.bg-white.p-3.rounded.shadow.text-center
                .stat-number.text-warning.fw-bold.h3= districts.length
                .stat-label.text-muted.small #{siteConfig.texts.districtCount}
            .col-md-3
              .stat-card.bg-white.p-3.rounded.shadow.text-center
                .stat-number.text-warning.fw-bold.h3= districts.reduce((total, district) => total + district.neighborhoods.length, 0)
                .stat-label.text-muted.small #{siteConfig.texts.neighborhoodCount}
            .col-md-3
              .stat-card.bg-white.p-3.rounded.shadow.text-center
                .stat-number.text-warning.fw-bold.h3 24/7
                .stat-label.text-muted.small #{siteConfig.texts.serviceHours}
            .col-md-3
              .stat-card.bg-white.p-3.rounded.shadow.text-center
                .stat-number.text-warning.fw-bold.h3 100%
                .stat-label.text-muted.small #{siteConfig.texts.satisfaction}
  
  section.py-5
    .container
      .text-center.mb-5
        h2.display-6.fw-bold.text-dark.mb-3
          | Neden 
          span.text-warning Bizimle Çalışmalısınız?
        p.lead.text-muted İstanbul'un her köşesinde güvenilir vinç, sepetli platform ve forklift kiralama hizmeti
      
      .row.g-4
        .col-lg-3.col-md-6
          .advantage-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .advantage-icon.bg-gradient-orange.text-white.rounded-circle.mx-auto.mb-3.d-flex.align-items-center.justify-content-center
              i.fas.fa-truck.fa-2x
            h5.card-title Hızlı Teslimat
            p.card-text.text-muted İstanbul'un her ilçesine 2 saat içinde teslimat
        .col-lg-3.col-md-6
          .advantage-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .advantage-icon.bg-gradient-orange.text-white.rounded-circle.mx-auto.mb-3.d-flex.align-items-center.justify-content-center
              i.fas.fa-user-tie.fa-2x
            h5.card-title Uzman Operatör
            p.card-text.text-muted Deneyimli operatörlerimizle güvenli hizmet
        .col-lg-3.col-md-6
          .advantage-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .advantage-icon.bg-gradient-orange.text-white.rounded-circle.mx-auto.mb-3.d-flex.align-items-center.justify-content-center
              i.fas.fa-shield-alt.fa-2x
            h5.card-title Sigortalı Hizmet
            p.card-text.text-muted Tam sigorta kapsamında güvenli hizmet
        .col-lg-3.col-md-6
          .advantage-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .advantage-icon.bg-gradient-orange.text-white.rounded-circle.mx-auto.mb-3.d-flex.align-items-center.justify-content-center
              i.fas.fa-clock.fa-2x
            h5.card-title 7/24 Destek
            p.card-text.text-muted Her zaman yanınızda teknik destek
  
  section.py-5.bg-light
    .container.text-center
      h2.display-6.fw-bold.text-dark.mb-4 İletişim
      p.lead.mb-4 7/24 hizmet için bizi arayın
      .row.justify-content-center
        .col-lg-6
          .contact-info.bg-white.p-4.rounded.shadow
            .contact-item.d-flex.align-items-center.justify-content-center.mb-3
              i.fas.fa-phone.text-warning.fa-2x.me-3
              span.display-6.fw-bold.text-dark #{siteConfig.contact.phoneDisplay}
