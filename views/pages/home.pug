extends ../layouts/main
include ../partials/crane-card

block content
  include ../components/hero-section
  
  section.py-5.bg-light
    .container
      .row.align-items-center.mb-5
        .col-lg-6(data-aos="fade-right")
          h2.display-5.fw-bold.text-dark.mb-4
            | #{siteConfig.texts.heroTitle}
          p.lead.text-muted.mb-4= siteConfig.site.description
          .features-list
            .row.g-3
              .col-md-6
                .feature-item.d-flex.align-items-center
                  .feature-icon.bg-white.text-success.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                    | ✓
                  span #{siteConfig.texts.feature1}
              .col-md-6
                .feature-item.d-flex.align-items-center
                  .feature-icon.bg-white.text-success.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                    | ✓
                  span #{siteConfig.texts.feature2}
              .col-md-6
                .feature-item.d-flex.align-items-center
                  .feature-icon.bg-white.text-success.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                    | ✓
                  span #{siteConfig.texts.feature3}
              .col-md-6
                .feature-item.d-flex.align-items-center
                  .feature-icon.bg-white.text-success.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                    | ✓
                  span #{siteConfig.texts.feature4}
        .col-lg-6(data-aos="fade-left")
          .hero-image.text-center
            img.img-fluid.rounded.shadow(src="/images/hero-crane-new.jpg", alt="İstanbul Vinç Kiralama", loading="lazy")
  
  section.py-5
    .container
      .text-center.mb-5
        h2.display-5.fw-bold.text-dark.mb-3
          | #{siteConfig.texts.featuredCranesTitle}
        p.lead.text-muted #{siteConfig.texts.featuredCranesSubtitle}
      
      .row
        each crane in featuredCranes
          +craneCard(crane)
      
      .text-center.mt-4
        a.btn.btn-outline-warning.btn-lg(href="/kiralik-vincler") #{siteConfig.texts.seeAllCranes}

  section.py-5.bg-light
    .container
      .text-center.mb-5
        h2.display-5.fw-bold.text-dark.mb-3
          | #{siteConfig.texts.otherEquipmentTitle}
        p.lead.text-muted #{siteConfig.texts.otherEquipmentSubtitle}
      
      .row.g-4
        .col-lg-4.col-md-6
          .card.h-100.shadow-sm.border-0.hover-card
            .card-body.text-center
              .equipment-icon.mb-3
                i.fas.fa-arrow-up.text-warning.fa-3x
              h5.card-title.text-warning #{siteConfig.texts.aerialPlatforms}
              p.card-text.text-muted.small #{siteConfig.texts.aerialPlatformDesc}
              .equipment-stats.mb-3
                .row.g-2
                  .col-6
                    .stat-item
                      .stat-number.text-warning.fw-bold 19
                      .stat-label.text-muted.small Model
                  .col-6
                    .stat-item
                      .stat-number.text-warning.fw-bold 100m
                      .stat-label.text-muted.small Max Yükseklik
              a.btn.btn-outline-warning.btn-sm(href="/kiralik-sepetli-platformlar") #{siteConfig.texts.seePlatforms}
        
        .col-lg-4.col-md-6
          .card.h-100.shadow-sm.border-0.hover-card
            .card-body.text-center
              .equipment-icon.mb-3
                i.fas.fa-truck.text-warning.fa-3x
              h5.card-title.text-warning #{siteConfig.texts.forklifts}
              p.card-text.text-muted.small #{siteConfig.texts.forkliftDesc}
              .equipment-stats.mb-3
                .row.g-2
                  .col-6
                    .stat-item
                      .stat-number.text-warning.fw-bold 12
                      .stat-label.text-muted.small Model
                  .col-6
                    .stat-item
                      .stat-number.text-warning.fw-bold 7t
                      .stat-label.text-muted.small Max Kapasite
              a.btn.btn-outline-warning.btn-sm(href="/kiralik-forkliftler") #{siteConfig.texts.seeForklifts}
        
        .col-lg-4.col-md-6
          .card.h-100.shadow-sm.border-0.hover-card
            .card-body.text-center
              .equipment-icon.mb-3
                i.fas.fa-tools.text-warning.fa-3x
              h5.card-title.text-warning #{siteConfig.texts.constructionMachinery}
              p.card-text.text-muted.small #{siteConfig.texts.constructionMachineryDesc}
              .equipment-stats.mb-3
                .row.g-2
                  .col-6
                    .stat-item
                      .stat-number.text-warning.fw-bold 8
                      .stat-label.text-muted.small Model
                  .col-6
                    .stat-item
                      .stat-number.text-warning.fw-bold 26t
                      .stat-label.text-muted.small Max Ağırlık
              a.btn.btn-outline-warning.btn-sm(href="/iletisim") #{siteConfig.texts.getQuote}
  
  section.py-5.bg-gradient-orange.text-white
    .container
      .row.align-items-center
        .col-lg-8
          h2.display-6.fw-bold.mb-3 #{siteConfig.texts.allDistrictsTitle}
          p.lead.mb-4
            | #{siteConfig.texts.allDistrictsDesc}
        .col-lg-4.text-center
          a.btn.btn-light.btn-lg(href="/iletisim") #{siteConfig.texts.getFreeQuote}
  
  section.py-5
    .container
      .text-center.mb-5
        h2.display-5.fw-bold.text-dark.mb-3
          | #{siteConfig.texts.popularDistrictsTitle}
        p.lead.text-muted #{siteConfig.texts.popularDistrictsSubtitle}
      
      .row.g-4
        each district in popularDistricts
          .col-lg-3.col-md-6
            .card.h-100.shadow-sm.border-0.hover-card
              .card-body.text-center
                .district-icon.mb-3
                  i.fas.fa-map-marker-alt.text-warning.fa-3x
                h5.card-title= district.name
                p.card-text.text-muted.small= district.description
                .neighborhoods.mb-3
                  each neighborhood in district.neighborhoods.slice(0, 3)
                    span.badge.bg-light.text-dark.me-1.mb-1= neighborhood
                  if district.neighborhoods.length > 3
                    span.badge.bg-secondary +#{district.neighborhoods.length - 3}
                a.btn.btn-outline-warning.btn-sm(href=`/kiralik-vinc-${district.slug}`) Vinçleri Gör
  
  section.py-5.bg-light
    .container
      .row.align-items-center
        .col-lg-6
          h2.display-6.fw-bold.text-dark.mb-4 #{siteConfig.texts.whyChooseUsTitle}
          .advantages
            .advantage-item.d-flex.mb-4
              .advantage-icon.bg-gradient-orange.text-white.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                i.fas.fa-medal
              .advantage-content
                h6.fw-bold.mb-2 15+ Yıl Deneyim
                p.text-muted.mb-0 Sektörde uzun yıllara dayanan deneyimimizle güvenilir hizmet
            .advantage-item.d-flex.mb-4
              .advantage-icon.bg-success.text-white.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                i.fas.fa-tools
              .advantage-content
                h6.fw-bold.mb-2 Modern Vinç Filosu
                p.text-muted.mb-0 En son teknoloji ile donatılmış modern vinç modelleri
            .advantage-item.d-flex.mb-4
              .advantage-icon.bg-info.text-white.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                i.fas.fa-headset
              .advantage-content
                h6.fw-bold.mb-2 7/24 Destek
                p.text-muted.mb-0 Her zaman yanınızda olan profesyonel destek ekibi
        .col-lg-6
          .stats-grid
            .row.g-3
              .col-6
                .stat-card.bg-white.p-4.rounded.shadow.text-center
                  .stat-number.text-warning.fw-bold.display-6 #{siteConfig.stats[0].number}
                  .stat-label.text-muted #{siteConfig.stats[0].label}
              .col-6
                .stat-card.bg-white.p-4.rounded.shadow.text-center
                  .stat-number.text-warning.fw-bold.display-6 #{siteConfig.stats[1].number}
                  .stat-label.text-muted #{siteConfig.stats[1].label}
              .col-6
                .stat-card.bg-white.p-4.rounded.shadow.text-center
                  .stat-number.text-warning.fw-bold.display-6 #{siteConfig.stats[2].number}
                  .stat-label.text-muted #{siteConfig.stats[2].label}
              .col-6
                .stat-card.bg-white.p-4.rounded.shadow.text-center
                  .stat-number.text-warning.fw-bold.display-6 #{siteConfig.stats[3].number}
                  .stat-label.text-muted #{siteConfig.stats[3].label}
  
  section.py-5.bg-gradient-orange.text-white
    .container.text-center
      h2.display-6.fw-bold.mb-4 #{siteConfig.texts.contactTitle}
      p.lead.mb-4 #{siteConfig.texts.contactSubtitle}
      .row.justify-content-center
        .col-lg-6
          .contact-info.bg-white.p-4.rounded.shadow
            .contact-item.d-flex.align-items-center.justify-content-center.mb-3
              i.fas.fa-phone.text-warning.fa-2x.me-3
              span.display-6.fw-bold.text-dark #{siteConfig.contact.phoneDisplay}
