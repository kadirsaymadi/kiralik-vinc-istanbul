extends ../layouts/main

block content
  section.py-5.bg-light
    .container
      .row.align-items-center.mb-5
        .col-lg-8
          h1.display-5.fw-bold.text-dark.mb-3 #{siteConfig.texts.contactTitle}
          p.lead.text-muted.mb-4 #{siteConfig.texts.contactSubtitle}
          
          .contact-features.row.g-3.mb-4
            .col-md-6
              .feature-item.d-flex.align-items-center
                .feature-icon.bg-warning.text-green.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                  | ✓
                span #{siteConfig.texts.feature1}
            .col-md-6
              .feature-item.d-flex.align-items-center
                .feature-icon.bg-warning.text-green.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                  | ✓
                span #{siteConfig.texts.feature4}
            .col-md-6
              .feature-item.d-flex.align-items-center
                .feature-icon.bg-warning.text-green.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                  | ✓
                span #{siteConfig.texts.getFreeQuote}
            .col-md-6
              .feature-item.d-flex.align-items-center
                .feature-icon.bg-warning.text-green.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                  | ✓
                span #{siteConfig.texts.feature3}
        
        .col-lg-4.text-center
          .contact-card.bg-white.p-4.rounded.shadow
            h4.text-warning.mb-3 #{siteConfig.texts.callNow}
            a.btn.btn-warning.btn-lg.w-100.mb-3(href=siteConfig.contact.phoneLink)
              i.fas.fa-phone.me-2
              | #{siteConfig.contact.phoneDisplay}
            p.small.text-muted.mb-0 #{siteConfig.texts.feature1}

  section.py-5
    .container
      // İletişim Bilgileri - Yan Yana
      .row.mb-5
        .col-md-3.col-6.mb-4
          .contact-info-item.text-center
            .contact-icon.bg-warning.text-white.rounded-circle.d-inline-flex.align-items-center.justify-content-center.mb-3
              i.fas.fa-map-marker-alt
            h6.fw-bold.mb-2 Adres
            p.text-muted.small #{siteConfig.contact.address}
            p.text-muted.small Tüm ilçelerde hizmet
        
        .col-md-3.col-6.mb-4
          .contact-info-item.text-center
            .contact-icon.bg-warning.text-white.rounded-circle.d-inline-flex.align-items-center.justify-content-center.mb-3
              i.fas.fa-phone
            h6.fw-bold.mb-2 Telefon
            p.text-muted.small
              a.text-decoration-none.text-warning(href=siteConfig.contact.phoneLink) #{siteConfig.contact.phoneDisplay}
            p.text-muted.small #{siteConfig.texts.feature1}
        
        .col-md-3.col-6.mb-4
          .contact-info-item.text-center
            .contact-icon.bg-warning.text-white.rounded-circle.d-inline-flex.align-items-center.justify-content-center.mb-3
              i.fas.fa-envelope
            h6.fw-bold.mb-2 E-posta
            p.text-muted.small
              a.text-decoration-none.text-warning(href=`mailto:${siteConfig.contact.email}`) #{siteConfig.contact.email}
            p.text-muted.small #{siteConfig.texts.feature4}
        
        .col-md-3.col-6.mb-4
          .contact-info-item.text-center
            .contact-icon.bg-warning.text-white.rounded-circle.d-inline-flex.align-items-center.justify-content-center.mb-3
              i.fas.fa-clock
            h6.fw-bold.mb-2 Çalışma Saatleri
            p.text-muted.small #{siteConfig.contact.workingHours}
            p.text-muted.small Pazartesi - Cuma: 08:00 - 18:00
            p.text-muted.small Cumartesi: 09:00 - 16:00
            p.text-muted.small Pazar: Acil durumlar için 7/24
      
      // Harita - Tek Row
      .row
        .col-12
          .map-card.bg-white.p-4.rounded.shadow
            h4.fw-bold.text-dark.mb-4.text-center Konum
            .map-container
              iframe(
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3010.2724693!2d29.1421898743164!3d40.97927440000002!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cacfa9f29f1753%3A0xa106ce7a4b880242!2sTemel%20Vin%C3%A7%20Platform%20Manlift%20Kiralama!5e0!3m2!1str!2str!4v1758744452572!5m2!1str!2str"
                width="100%"
                height="400"
                frameborder="0"
                style="border:0;"
                allowfullscreen=""
                title="Temel Vinç Platform Manlift Kiralama Konumu"
                onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
              )
  section.py-5.bg-gradient-orange.text-white
    .container.text-center
      h2.display-6.fw-bold.mb-4 #{siteConfig.texts.contactTitle}
      p.lead.mb-4 #{siteConfig.texts.contactSubtitle}
      .row.justify-content-center
        .col-lg-6
          .contact-info.bg-white.p-4.rounded.shadow
            .contact-item.d-flex.align-items-center.justify-content-center.mb-3
              i.fas.fa-phone.text-warning.fa-2x.me-3
              span.display-6.fw-bold.text-dark #{siteConfig.contact.phoneDisplay}
