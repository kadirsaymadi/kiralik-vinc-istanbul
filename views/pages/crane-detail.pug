extends ../layouts/main
include ../partials/crane-card

block content
  section.py-5.bg-light
    .container
      .row.align-items-center.mb-5
        .col-lg-8
          h1.display-5.fw-bold.text-dark.mb-3= crane.name
          p.lead.text-muted.mb-4= crane.description
          
          .crane-badges.mb-4
            span.badge.bg-warning.me-2= crane.type
            span.badge.bg-warning.me-2= crane.capacity
            span.badge.bg-warning.me-2= crane.height
            span.badge.bg-warning.me-2= crane.radius
            if crane.availability
              span.badge.bg-warning
                i.fas.fa-check.me-1
                | #{siteConfig.texts.available}
        
        .col-lg-4.text-center
          a.btn.btn-warning.btn-lg(href="/iletisim") #{siteConfig.texts.getQuote}
  
  section.py-5
    .container
      .row
        .col-lg-8
          .crane-gallery.mb-5
            .swiper.crane-detail-swiper
              .swiper-wrapper
                each image in crane.images
                  .swiper-slide
                    img.img-fluid.rounded.shadow(src=image, alt=crane.name, loading="lazy")
              .swiper-pagination
              .swiper-button-next
              .swiper-button-prev
          
          .crane-features.mb-5
            h3.display-6.fw-bold.text-dark.mb-4 #{siteConfig.texts.features}
            .row.g-3
              each feature in crane.features
                .col-md-6
                  .feature-item.d-flex.align-items-center
                    .feature-icon.bg-warning.text-dark.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                      i.fas.fa-check
                    span= feature
          
          .crane-specifications.mb-5
            h3.display-6.fw-bold.text-dark.mb-4 #{siteConfig.texts.technicalSpecs}
            .row.g-3
              .col-md-6
                .spec-card.bg-light.p-3.rounded
                  .spec-label.text-muted.small #{siteConfig.texts.liftingCapacity}
                  .spec-value.fw-bold.text-warning= crane.capacity
              .col-md-6
                .spec-card.bg-light.p-3.rounded
                  .spec-label.text-muted.small #{siteConfig.texts.workingHeight}
                  .spec-value.fw-bold.text-warning= crane.height
              .col-md-6
                .spec-card.bg-light.p-3.rounded
                  .spec-label.text-muted.small Çalışma Yarıçapı
                  .spec-value.fw-bold.text-warning= crane.radius
              .col-md-6
                .spec-card.bg-light.p-3.rounded
                  .spec-label.text-muted.small #{siteConfig.texts.type}
                  .spec-value.fw-bold.text-warning= crane.type
        
        .col-lg-4
          .features-card.bg-white.p-4.rounded.shadow.sticky-top
            h4.fw-bold.text-dark.mb-4 #{siteConfig.texts.features}
            .features-list
              each feature in crane.features
                .feature-item.d-flex.align-items-center.mb-3
                  .feature-icon.me-3
                    i.fas.fa-check.text-warning
                  .feature-text= feature
            
            .contact-note.bg-light.p-3.rounded.mb-4
              p.text-muted.small.mb-0
                i.fas.fa-info-circle.me-1
                | Detaylı bilgi ve teklif için iletişime geçin.
            
            .contact-actions
              a.btn.btn-warning.btn-lg.w-100.mb-2(href="/iletisim") #{siteConfig.texts.getQuote}
              a.btn.btn-outline-warning.btn-lg.w-100(href=siteConfig.contact.phoneLink) #{siteConfig.texts.callNow}
  
  section.py-5.bg-light
    .container
      .text-center.mb-5
        h2.display-6.fw-bold.text-dark.mb-3
          | #{siteConfig.texts.similarCranes}
        p.lead.text-muted #{siteConfig.texts.otherCranes}
      
      .row
        each relatedCrane in relatedCranes
          +craneCard(relatedCrane)
      
      .text-center.mt-4
        a.btn.btn-outline-warning.btn-lg(href="/kiralik-vincler") #{siteConfig.texts.seeAllCranes}
  
  section.py-5.bg-gradient-orange.text-white
    .container.text-center
      h2.display-6.fw-bold.mb-4 #{siteConfig.texts.contactTitle}
      p.lead.mb-4 #{siteConfig.texts.contactSubtitle}
      .row.justify-content-center
        .col-lg-6
          .contact-info.bg-white.p-4.rounded.shadow
            .contact-item.d-flex.align-items-center.justify-content-center.mb-3
              i.fas.fa-phone.text-warning.fa-2x.me-3
              span.display-6.fw-bold.text-dark #{siteConfig.contact.phoneDisplay}
