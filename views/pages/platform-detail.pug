extends ../layouts/main
include ../partials/crane-card

block content
  section.py-4.py-md-5.bg-light
    .container
      .row.align-items-center.mb-4.mb-md-5
        .col-12.col-lg-8.mb-4.mb-lg-0
          h1.display-6.display-md-5.fw-bold.text-dark.mb-3= platform.name
          p.lead.text-muted.mb-4= platform.description
          
          .platform-badges.mb-4
            .d-flex.flex-wrap.gap-2
              span.badge.bg-warning= platform.type
              span.badge.bg-warning= platform.capacity
              span.badge.bg-warning= platform.height
              if platform.availability
                span.badge.bg-warning
                  i.fas.fa-check.me-1
                  | #{siteConfig.texts.available}
        
        .col-12.col-lg-4.text-center.text-lg-end
          a.btn.btn-warning.btn-lg.w-100.w-md-auto(href="/iletisim") #{siteConfig.texts.getQuote}
  
  section.py-4.py-md-5
    .container
      .row
        .col-12.col-lg-8.mb-5.mb-lg-0
          .platform-gallery.mb-5
            img.img-fluid.rounded.shadow(src=platform.images, alt=platform.name, loading="lazy")
          
          .platform-features.mb-4.mb-md-5
            h3.display-6.fw-bold.text-dark.mb-4 #{siteConfig.texts.features}
            .row.g-3
              each feature in platform.features
                .col-12.col-sm-6
                  .feature-item.d-flex.align-items-center
                    .feature-icon.bg-warning.text-dark.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                      i.fas.fa-check
                    span= feature
          
          .platform-specifications.mb-4.mb-md-5
            h3.display-6.fw-bold.text-dark.mb-4 #{siteConfig.texts.technicalSpecs}
            .row.g-3
              .col-12.col-sm-6
                .spec-card.bg-light.p-3.rounded
                  .spec-label.text-muted.small #{siteConfig.texts.liftingCapacity}
                  .spec-value.fw-bold.text-warning= platform.capacity
              .col-12.col-sm-6
                .spec-card.bg-light.p-3.rounded
                  .spec-label.text-muted.small #{siteConfig.texts.workingHeight}
                  .spec-value.fw-bold.text-warning= platform.height
              .col-12.col-sm-6
                .spec-card.bg-light.p-3.rounded
                  .spec-label.text-muted.small #{siteConfig.texts.type}
                  .spec-value.fw-bold.text-warning= platform.type
              .col-12.col-sm-6
                .spec-card.bg-light.p-3.rounded
                  .spec-label.text-muted.small #{siteConfig.texts.status}
                  if platform.availability
                    .spec-value.fw-bold.text-success #{siteConfig.texts.available}
                  else
                    .spec-value.fw-bold.text-danger #{siteConfig.texts.notAvailable}
          
          .platform-description.mb-5
            h3.display-6.fw-bold.text-dark.mb-4 #{siteConfig.texts.description}
            p.text-muted= platform.description
          
          .platform-tags.mb-4.mb-md-5
            h3.display-6.fw-bold.text-dark.mb-4 #{siteConfig.texts.tags}
            .row.g-3
              each tag in platform.tags
                .col-12.col-sm-6
                  .tag-item.d-flex.align-items-center
                    .tag-icon.bg-warning.text-dark.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                      i.fas.fa-tag
                    span= tag
        
        .col-12.col-lg-4
          .platform-info.bg-light.p-3.p-md-4.rounded.shadow.mb-4
            h4.fw-bold.text-dark.mb-3 #{siteConfig.texts.platformInfo}
            .info-item.mb-3
              .info-label.text-muted.small #{siteConfig.texts.liftingCapacity}
              .info-value.fw-bold.text-warning= platform.capacity
            .info-item.mb-3
              .info-label.text-muted.small #{siteConfig.texts.workingHeight}
              .info-value.fw-bold.text-warning= platform.height
            .info-item.mb-3
              .info-label.text-muted.small #{siteConfig.texts.type}
              .info-value.fw-bold.text-warning= platform.type
            .info-item.mb-3
              .info-label.text-muted.small #{siteConfig.texts.status}
              if platform.availability
                .info-value.fw-bold.text-success
                  i.fas.fa-check.me-1
                  | #{siteConfig.texts.available}
              else
                .info-value.fw-bold.text-danger
                  i.fas.fa-times.me-1
                  | #{siteConfig.texts.available} DeÄŸil
            
            .platform-actions.mt-4
              a.btn.btn-warning.btn-lg.w-100.mb-2(href="/iletisim") #{siteConfig.texts.getQuote}
              a.btn.btn-outline-warning.btn-lg.w-100(href="/kiralik-sepetli-platformlar") #{siteConfig.texts.seePlatforms}
          
          .platform-contact.bg-white.p-3.p-md-4.rounded.shadow
            h4.fw-bold.text-dark.mb-3 #{siteConfig.texts.contactTitle}
            .contact-item.d-flex.align-items-center.mb-3
              i.fas.fa-phone.text-warning.me-3
              span #{siteConfig.contact.phoneDisplay}
            .contact-item.d-flex.align-items-center.mb-3
              i.fas.fa-envelope.text-warning.me-3
              span #{siteConfig.contact.email}
            .contact-item.d-flex.align-items-center
              i.fas.fa-clock.text-warning.me-3
              span #{siteConfig.contact.workingHours}
  
  section.py-5.bg-light
    .container
      .text-center.mb-5
        h2.display-6.fw-bold.text-dark.mb-3
          | #{siteConfig.texts.similarPlatforms}
        p.lead.text-muted #{siteConfig.texts.otherPlatforms}
      
      .row
        each relatedPlatform in relatedPlatforms
          +craneCard(relatedPlatform)
      
      .text-center.mt-4
        a.btn.btn-outline-warning.btn-lg(href="/kiralik-sepetli-platformlar") #{siteConfig.texts.seePlatforms}
  
  section.py-5.bg-gradient-orange.text-white
    .container.text-center
      h2.display-6.fw-bold.mb-4 #{siteConfig.texts.contactTitle}
      p.lead.mb-4 #{siteConfig.texts.contactSubtitle}
      .row.justify-content-center
        .col-12.col-md-8.col-lg-6
          .contact-info.bg-white.p-3.p-md-4.rounded.shadow
            .contact-item.d-flex.align-items-center.justify-content-center.mb-3
              i.fas.fa-phone.text-warning.fa-2x.me-3
              span.display-6.fw-bold.text-dark #{siteConfig.contact.phoneDisplay}

