extends ../layouts/main
include ../partials/crane-card

block content
  section.py-5.bg-light
    .container
      .row.align-items-center.mb-5
        .col-lg-8
          h1.display-5.fw-bold.text-dark.mb-3 #{siteConfig.texts.featuredCranesTitle}
          p.lead.text-muted.mb-4 #{siteConfig.texts.featuredCranesSubtitle}
          
          .crane-stats.row.g-3.mb-4
            .col-md-3
              .stat-card.bg-white.p-3.rounded.shadow.text-center
                .stat-number.text-warning.fw-bold.h3= cranes.length
                .stat-label.text-muted.small #{siteConfig.texts.craneModels}
            .col-md-3
              .stat-card.bg-white.p-3.rounded.shadow.text-center
                .stat-number.text-warning.fw-bold.h3= cranes.filter(c => c.type === 'Mobil Vinç').length
                .stat-label.text-muted.small #{siteConfig.texts.mobileCrane}
            .col-md-3
              .stat-card.bg-white.p-3.rounded.shadow.text-center
                .stat-number.text-warning.fw-bold.h3= cranes.filter(c => c.type === 'Sabit Vinç').length
                .stat-label.text-muted.small #{siteConfig.texts.fixedCrane}
            .col-md-3
              .stat-card.bg-white.p-3.rounded.shadow.text-center
                .stat-number.text-warning.fw-bold.h3 350
                .stat-label.text-muted.small Max Kapasite (Ton)
        
        .col-lg-4.text-center
          a.btn.btn-warning.btn-lg(href="/iletisim") #{siteConfig.texts.getQuote}
  
  section.py-5
    .container
      .row#craneList
        each crane in cranes
          +craneCard(crane)
      
      .text-center.mt-5
        a.btn.btn-outline-warning.btn-lg(href="/iletisim") #{siteConfig.texts.getQuote}
  
  section.py-5.bg-light
    .container
      .text-center.mb-5
        h2.display-6.fw-bold.text-dark.mb-3
          | Vinç Kiralama 
          span.text-warning Süreci
        p.lead.text-muted #{siteConfig.texts.forkliftProcessSubtitle}
      
      .row.g-4
        .col-lg-3.col-md-6
          .process-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .step-number 1
            h5.card-title.fw-bold.mb-2 #{siteConfig.texts.forkliftStep1}
            p.card-text.text-muted.small #{siteConfig.texts.forkliftStep1Desc}
        .col-lg-3.col-md-6
          .process-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .step-number 2
            h5.card-title.fw-bold.mb-2 Vinç Seç
            p.card-text.text-muted.small İhtiyacınıza uygun vinç modelini seçin
        .col-lg-3.col-md-6
          .process-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .step-number 3
            h5.card-title.fw-bold.mb-2 #{siteConfig.texts.forkliftStep3}
            p.card-text.text-muted.small #{siteConfig.texts.forkliftStep3Desc}
        .col-lg-3.col-md-6
          .process-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .step-number 4
            h5.card-title.fw-bold.mb-2 #{siteConfig.texts.forkliftStep4}
            p.card-text.text-muted.small #{siteConfig.texts.forkliftStep4Desc}
  
  section.py-5.bg-gradient-orange.text-white
    .container.text-center
      h2.display-6.fw-bold.mb-4 #{siteConfig.texts.contactTitle}
      p.lead.mb-4 #{siteConfig.texts.contactSubtitle}
      .row.justify-content-center
        .col-lg-6
          .contact-info.bg-white.p-4.rounded.shadow
            .contact-item.d-flex.align-items-center.justify-content-center.mb-3
              i.fas.fa-phone.text-warning.fa-2x.me-3
              span.display-6.fw-bold.text-dark #{siteConfig.contact.phoneDisplay}

block scripts
  script(src="/js/crane-list.js")
