extends ../layouts/main
include ../partials/crane-card

block content
  section.py-5.bg-light
    .container
      .row.align-items-center.mb-5
        .col-lg-8
          h1.display-5.fw-bold.text-dark.mb-3= `${district.name} Vinç Kiralama`
          p.lead.text-muted.mb-4= district.description
          
          .district-features.row.g-3.mb-4
            .col-md-6
              .feature-item.d-flex.align-items-center
                .feature-icon.bg-gradient-orange.text-white.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                  i.fas.fa-map-marker-alt
                span= `${district.neighborhoods.length} Mahallede Hizmet`
            .col-md-6
              .feature-item.d-flex.align-items-center
                .feature-icon.bg-gradient-orange.text-white.rounded-circle.me-3.d-flex.align-items-center.justify-content-center
                  i.fas.fa-truck
                span Tüm Vinç Modelleri Mevcut
        
        .col-lg-4.text-center
          a.btn.btn-warning.btn-lg(href="/teklif-al") Teklif Al
  
  section.py-5
    .container
      .text-center.mb-5
        h2.display-6.fw-bold.text-dark.mb-3
          | #{district.name} İlçesinde 
          span.text-warning Mevcut Vinçler
        p.lead.text-muted İlçenizde kullanabileceğiniz vinç modelleri
      
      .row
        each crane in availableCranes
          +craneCard(crane)
      
      .text-center.mt-4
        a.btn.btn-outline-warning.btn-lg(href="/kiralik-vincler") Tüm Vinçleri Gör
  
  section.py-5.bg-light
    .container
      .text-center.mb-5
        h2.display-6.fw-bold.text-dark.mb-3
          | #{district.name} İlçesinde 
          span.text-warning Mahallelerimiz
        p.lead.text-muted İlçenizin tüm mahallelerinde hizmet veriyoruz
      
      .row.g-4
        each neighborhood in neighborhoods
          .col-lg-4.col-md-6
            .card.h-100.shadow-sm.border-0.hover-card
              .card-body.text-center
                .neighborhood-icon.mb-3
                  i.fas.fa-home.text-warning.fa-3x
                h5.card-title= neighborhood.name
                p.card-text.text-muted.small= neighborhood.description
                a.btn.btn-outline-warning.btn-sm(href=`/kiralik-vinc-${district.slug}/${neighborhood.slug}`) Vinçleri Gör
  
  section.py-5.bg-gradient-orange.text-white
    .container.text-center
      h2.display-6.fw-bold.mb-4 #{district.name} İçin Hemen Teklif Alın
      p.lead.mb-4 İlçenizdeki projeniz için en uygun vinç modelini belirleyelim
      .row.justify-content-center
        .col-lg-8
          .cta-form.bg-white.p-4.rounded.shadow
            .row.g-3
              .col-md-6
                input.form-control(type="text", placeholder="Adınız Soyadınız")
              .col-md-6
                input.form-control(type="tel", placeholder="Telefon Numaranız")
              .col-md-6
                input.form-control(type="text", placeholder=district.name, readonly, value=district.name)
              .col-md-6
                select.form-select
                  option(value="") Mahalle Seçiniz
                  each neighborhood in neighborhoods
                    option(value=neighborhood.slug)= neighborhood.name
              .col-md-6
                select.form-select
                  option(value="") Vinç Kapasitesi
                  option(value="25") 25 Ton
                  option(value="50") 50 Ton
                  option(value="100") 100 Ton
                  option(value="150") 150 Ton
                  option(value="200") 200 Ton
                  option(value="350") 350 Ton
              .col-md-6
                input.form-control(type="date", placeholder="Tarih Seçiniz")
              .col-12
                textarea.form-control(rows="3", placeholder="Proje detayları...")
              .col-12
                button.btn.btn-warning.btn-lg.w-100 Teklif Al
