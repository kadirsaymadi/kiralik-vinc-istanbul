extends ../layouts/main

block content
  section.py-5.bg-light.min-vh-100.d-flex.align-items-center
    .container
      .row.justify-content-center
        .col-lg-8.text-center
          .error-content
            .error-code.display-1.fw-bold.text-danger.mb-4 500
            h1.display-4.fw-bold.text-dark.mb-4 Sunucu Hatası
            p.lead.text-muted.mb-5
              | Bir sunucu hatası oluştu. Lütfen daha sonra tekrar deneyin veya bizimle iletişime geçin.
            
            .error-actions.mb-5
              a.btn.btn-warning.btn-lg.me-3.mb-2(href="/") 
                i.fas.fa-home.me-2
                | Ana Sayfaya Dön
              a.btn.btn-outline-warning.btn-lg.mb-2(href="/iletisim") 
                i.fas.fa-envelope.me-2
                | İletişime Geç
            
            .error-help
              h5.fw-bold.text-dark.mb-3 Yardım İçin
              .row.g-3
                .col-md-6
                  .help-card.bg-white.p-3.rounded.shadow.h-100
                    i.fas.fa-phone.text-warning.mb-2
                    h6.mb-1 Telefon
                    p.text-muted.small.mb-0 +90 XXX XXX XX XX
                .col-md-6
                  .help-card.bg-white.p-3.rounded.shadow.h-100
                    i.fas.fa-envelope.text-warning.mb-2
                    h6.mb-1 E-posta
                    p.text-muted.small.mb-0 info@kiralikvincistanbul.com
