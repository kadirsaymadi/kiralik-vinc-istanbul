extends ../layouts/main

block content
  section.py-5.bg-light
    .container
      .row.align-items-center.mb-5
        .col-lg-8
          h1.display-5.fw-bold.text-dark.mb-3 Forklift Modelleri
          p.lead.text-muted.mb-4 İstanbul'da kiralık forklift modelleri. 1.5 ton'dan 7 ton'a kadar forklift çeşitleri.
          .forklift-stats.row.g-3.mb-4
            .col-md-3
              .stat-card.bg-white.p-3.rounded.shadow.text-center
                .stat-number.text-warning.fw-bold.h3= forklifts.length
                .stat-label.text-muted.small Toplam Model
            .col-md-3
              .stat-card.bg-white.p-3.rounded.shadow.text-center
                .stat-number.text-warning.fw-bold.h3= forklifts.filter(f => f.type === 'Elektrikli Forklift').length
                .stat-label.text-muted.small Elektrikli Forklift
            .col-md-3
              .stat-card.bg-white.p-3.rounded.shadow.text-center
                .stat-number.text-warning.fw-bold.h3= forklifts.filter(f => f.type === 'Dizel Forklift').length
                .stat-label.text-muted.small Dizel Forklift
            .col-md-3
              .stat-card.bg-white.p-3.rounded.shadow.text-center
                .stat-number.text-warning.fw-bold.h3 7
                .stat-label.text-muted.small Max Kapasite (Ton)
        .col-lg-4.text-center
          a.btn.btn-warning.btn-lg(href="/teklif-al") Teklif Al

  section.py-5
    .container
      .row#forkliftList
        each forklift in forklifts
          .col-lg-4.col-md-6.mb-4
            .card.h-100.shadow-sm.border-0.hover-card
              .position-relative
                img.card-img-top(src=forklift.images, alt=forklift.name, loading="lazy")
                .badge.bg-warning.position-absolute.top-0.end-0.m-2
                  i.fas.fa-check.me-1
                  | Mevcut
              .card-body.d-flex.flex-column
                h5.card-title.text-warning= forklift.name
                .forklift-specs.mb-3
                  .row.g-2
                    .col-6
                      .spec-item
                        i.fas.fa-weight-hanging.text-warning.me-1
                        span.small= forklift.capacity
                    .col-6
                      .spec-item
                        i.fas.fa-arrow-up.text-warning.me-1
                        span.small= forklift.height
                    .col-6
                      .spec-item
                        i.fas.fa-cog.text-warning.me-1
                        span.small= forklift.type
                p.card-text.text-muted.small.flex-grow-1= forklift.description
                .features.mb-3
                  h3.text-warning.mb-2 Özellikler:
                  ul.list-unstyled.small
                    each feature in forklift.features.slice(0, 3)
                      li
                        i.fas.fa-check.text-warning.me-1
                        = feature
                .card-actions.mt-auto
                  a.btn.btn-outline-warning.btn-sm.me-2(href=`/kiralik-forkliftler/${forklift.id}-kiralama`) Detay
                  a.btn.btn-warning.btn-sm(href="/teklif-al") Teklif Al

      .text-center.mt-5
        a.btn.btn-outline-warning.btn-lg(href="/teklif-al") Teklif Al

  section.py-5.bg-light
    .container
      .text-center.mb-5
        h2.display-6.fw-bold.text-dark.mb-3 Forklift Kiralama <span.text-warning>Süreci</span>
        p.lead.text-muted Kolay ve hızlı kiralama süreci
      .row.g-4
        .col-lg-3.col-md-6
          .process-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .process-icon.mb-3
              .step-number.bg-warning.text-dark.rounded-circle.mx-auto.d-flex.align-items-center.justify-content-center 1
            h5.card-title Teklif Al
            p.card-text.text-muted Projeniz için ücretsiz teklif alın
        .col-lg-3.col-md-6
          .process-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .process-icon.mb-3
              .step-number.bg-warning.text-dark.rounded-circle.mx-auto.d-flex.align-items-center.justify-content-center 2
            h5.card-title Forklift Seç
            p.card-text.text-muted İhtiyacınıza uygun forklift modelini seçin
        .col-lg-3.col-md-6
          .process-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .process-icon.mb-3
              .step-number.bg-warning.text-dark.rounded-circle.mx-auto.d-flex.align-items-center.justify-content-center 3
            h5.card-title Sözleşme
            p.card-text.text-muted Sözleşme imzalayın ve ödeme yapın
        .col-lg-3.col-md-6
          .process-card.bg-white.p-4.rounded.shadow.text-center.h-100
            .process-icon.mb-3
              .step-number.bg-warning.text-dark.rounded-circle.mx-auto.d-flex.align-items-center.justify-content-center 4
            h5.card-title Operatörlü Teslimat
            p.card-text.text-muted Uzman operatörümüzle birlikte forklifti teslim ediyoruz

  section.py-5.bg-gradient-orange.text-white
    .container.text-center
      h2.display-6.fw-bold.mb-4 İletişim
      p.lead.mb-4 7/24 hizmet için bizi arayın
      .row.justify-content-center
        .col-lg-6
          .contact-info.bg-white.p-4.rounded.shadow
            .contact-item.d-flex.align-items-center.justify-content-center.mb-3
              i.fas.fa-phone.text-warning.fa-2x.me-3
              span.display-6.fw-bold.text-dark #{siteConfig.contact.phoneDisplay}
