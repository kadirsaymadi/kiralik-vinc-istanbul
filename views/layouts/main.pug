    // Critical CSS inline olarak yüklendi
    style.
      :root {
        --primary-color: #ff6b35;
        --secondary-color: #ff8c42;
        --accent-color: #ffd23f;
        --text-dark: #1a1a1a;
        --text-light: #6c757d;
        --background: #f8f9fa;
        --white: #ffffff;
        --success: #ff8c42;
        --warning: #ffd23f;
        --danger: #ff6b35;
        --border-radius: 8px;
        --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
      }
      body {
        font-family: "Poppins", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          "Helvetica Neue", Arial, sans-serif;
        line-height: 1.6;
        color: var(--text-dark);
        background-color: var(--background);
        margin: 0;
        padding: 0;
      }
      .navbar {
        background-color: var(--primary-color) !important;
        box-shadow: var(--box-shadow);
      }
      .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
      }
      .btn-primary:hover {
        background-color: var(--secondary-color);
        border-color: var(--secondary-color);
      }
      .btn-warning {
        background-color: var(--accent-color);
        border-color: var(--accent-color);
        color: var(--text-dark);
      }
      .btn-warning:hover {
        background-color: var(--secondary-color);
        border-color: var(--secondary-color);
        color: white;
      }
      .btn-outline-warning {
        color: var(--accent-color);
        border-color: var(--accent-color);
      }
      .btn-outline-warning:hover {
        background-color: var(--accent-color);
        border-color: var(--accent-color);
        color: var(--text-dark);
      }
      .text-warning {
        color: var(--accent-color) !important;
      }
      .text-gradient-orange {
        background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 25%, #ffa726 50%, #ffb74d 75%, #ffd23f 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      .bg-warning {
        background-color: var(--accent-color) !important;
      }
      .bg-gradient-orange {
        background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 25%, #ffa726 50%, #ffb74d 75%, #ffd23f 100%) !important;
      }
      .back-to-top {
        background-color: var(--accent-color) !important;
        border-color: var(--accent-color) !important;
        color: var(--text-dark) !important;
        box-shadow: 0 4px 12px rgba(255, 107, 53, 0.3);
        transition: all 0.3s ease;
      }
      .back-to-top:hover {
        background-color: var(--secondary-color) !important;
        border-color: var(--secondary-color) !important;
        color: white !important;
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(255, 107, 53, 0.4);
      }
      .logo-container {
        display: flex;
        flex-direction: column;
        line-height: 1.2;
      }
      .logo-main {
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0;
      }
      .logo-sub {
        font-size: 0.8rem;
        font-weight: 400;
        color: var(--accent-color);
        margin-top: -2px;
      }
      .hero-section {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 50%, var(--accent-color) 100%);
        color: white;
        padding: 100px 0;
      }
      .card {
        border: none;
        box-shadow: var(--box-shadow);
        border-radius: var(--border-radius);
      }
      .navbar-brand {
        font-family: "Roboto Slab", Georgia, "Times New Roman", serif;
        font-weight: 600;
        color: white !important;
      }
      .navbar-nav .nav-link {
        color: white !important;
        font-weight: 500;
      }
      .navbar-nav .nav-link:hover {
        color: var(--accent-color) !important;
      }
    
